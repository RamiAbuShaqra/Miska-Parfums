<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="3"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/select_to_buy_product_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="4"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:textAlignment="viewEnd"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:text="Sample Perfume" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/select_to_buy_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="end"
                    android:paddingRight="4dp"
                    android:paddingBottom="8dp"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/golden_brown"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="5.0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="end"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    android:text="JOD"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/golden_brown"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/select_to_buy_product_photo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@color/golden_brown"
            android:padding="3dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/decrease_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/minus_plus"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="-"/>

            <TextView
                android:id="@+id/current_selected_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:background="@drawable/quantity"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/blue_grey_600"
                android:textSize="20sp"
                android:text="3"/>

            <TextView
                android:id="@+id/increase_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/minus_plus"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="+"/>

        </LinearLayout>

        <TextView
            android:id="@+id/delete_from_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginStart="140dp"
            android:gravity="center"
            android:background="@drawable/delete_from_cart"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="Delete" />

    </LinearLayout>

</LinearLayout>
