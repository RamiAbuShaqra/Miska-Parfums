<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.miskaparfums">

    <application
        android:name="com.example.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_miska"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_miska"
        android:supportsRtl="true"
        android:theme="@style/Theme.MiskaParfums">
        <activity
            android:name=".OrderSummaryActivity"
            android:launchMode="singleInstance"/>
        <activity android:name=".PreferenceActivity" />
        <activity android:name=".SelectedProductActivity" />
        <activity
            android:name=".FullImageActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>